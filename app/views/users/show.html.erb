<h1><%= @user.user_s %>'s Show Page</h1>

<% if @user.id == current_user.id %>
  <%= link_to "Edit profile", edit_user_path(@user) %>
<% end %>

<hr>

Name: <h3><%= @user.user_s %></h3>
Phone: <h3><%= @user.phone_number %></h3>
Email: <h3><%= @user.email %></h3>
<% if @user.realtor? %>
Firm: <h3><%= @user.firm %></h3>
<% end %>

<% @user.favorites.each do |favorite| %>
  <%= favorite.address_s %>
  <br>
<% end %>
